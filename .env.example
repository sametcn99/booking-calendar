# Server
PORT=3000
HOST=0.0.0.0
BASE_URL=http://localhost:3000

# Client SEO / metadata (used at build time by Vite)
VITE_PUBLIC_URL=http://localhost:3000
VITE_SEO_LANG=en
VITE_SEO_TITLE=Booking Calendar
VITE_SEO_DESCRIPTION=Personal booking calendar
VITE_SEO_KEYWORDS=booking,calendar,appointments,self-hosted
VITE_SEO_AUTHOR=Booking Calendar
VITE_SEO_OG_TYPE=website
VITE_SEO_TWITTER_CARD=summary

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# JWT Secret (generate a strong random string)
JWT_SECRET=your-secret-key-change-this

# SMTP Configuration
SMTP_HOST=host.example.com
SMTP_PORT=587
SMTP_PASS=your-email-password
SMTP_USER=your-email@example.com
SMTP_FROM=Your Name <your-email@example.com>

# Web Push (VAPID)
# Generate with: bun run generate-vapid-keys
VITE_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Database
DB_PATH=./data/booking.db

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
