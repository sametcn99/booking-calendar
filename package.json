{
	"name": "booking-calendar",
	"version": "1.1.3",
	"private": true,
	"scripts": {
		"dev:server": "bun run --watch src/server/index.ts",
		"dev:client": "cd src/client && bun run dev",
		"dev": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
		"build:client": "cd src/client && bun run build",
		"build": "bun run build:client",
		"start": "NODE_ENV=production bun run src/server/index.ts",
		"db:init": "bun run src/server/db/init.ts",
		"db:seed": "bun run src/server/db/seed.ts",
		"generate-vapid-keys": "bun run src/server/generate-vapid-keys.ts",
		"check:i18n": "bun run scripts/check-i18n.ts",
		"format:md": "prettier --write \"**/*.md\"",
		"check": "bunx biome check --write --unsafe && bunx tsc --noEmit && bun run check:i18n && bun run format:md",
		"docs:dev": "cd src/docs && bun run docs:dev",
		"docs:build": "cd src/docs && bun run docs:build",
		"docs:preview": "cd src/docs && bun run docs:preview"
	},
	"dependencies": {
		"@types/web-push": "^3.6.4",
		"concurrently": "^9.2.1",
		"handlebars": "^4.7.8",
		"nodemailer": "^8.0.1",
		"reflect-metadata": "^0.2.2",
		"sql.js": "^1.14.0",
		"typeorm": "^0.3.28",
		"web-push": "^3.6.7"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.3",
		"@types/nodemailer": "^7.0.11",
		"bun-types": "^1.3.9",
		"prettier": "^3.8.1",
		"typescript": "^5.9.3"
	}
}
